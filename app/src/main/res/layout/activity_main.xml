<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    android:transitionName="bg_view"
    tools:context="com.kids_learning_fun_learning.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#99ffffff"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/toolbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
    </android.support.v7.widget.Toolbar>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scrollbars="none"
     android:layout_below="@+id/my_toolbar"
     android:layout_margin="5dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_gravity="center"
         >
        <ImageView
            android:id="@+id/learn_letters_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:text="Learn Alphabets"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#19868f"
            android:background="@drawable/bubble_btn_bg"
            android:src="@drawable/letters_icon"
            android:onClick="performLearnClick"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Alphabets"
            android:textColor="#000000"
            android:textSize="@dimen/home_text_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_gravity="center"
         >
        <ImageView
            android:id="@+id/learn_numbers_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:text="Learn Alphabets"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#19868f"
            android:background="@drawable/bubble_btn_bg"
            android:src="@drawable/numbers_icon"
            android:onClick="performNumberClick"
            android:layout_gravity="center_horizontal"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="Numbers"
             android:textColor="#000000"
             android:textSize="@dimen/home_text_size"
             android:textStyle="bold"
             android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>

