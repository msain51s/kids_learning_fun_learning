<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kids_learning_fun_learning">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utility.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">



        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LearningScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NumberScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShapeScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".ColorScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".AnimalScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".FruitScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".DaysOfWeekScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".VegetableScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".MonthOfYearScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".SolarSystemScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".BodyPartScreen"
            android:screenOrientation="portrait"/>


    </application>

</manifest>